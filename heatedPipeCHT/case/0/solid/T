FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    wall_solid
    {
        type            turbulentTemperatureCoupledBaffleMixed;
        Tnbr            T;
        kappaMethod     solidThermo;
        value           uniform 300;
    }

    externalWall
    {
        type            externalWallHeatFluxTemperature;
        mode            flux;
        q               uniform 10000; // 10 kW/m^2 heat flux
        kappaMethod     solidThermo;
        value           uniform 300;
    }
    
    defaultFaces
    {
        type            empty;
    }
}

// ************************************************************************* //