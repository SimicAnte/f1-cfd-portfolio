FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0/solid";
    object      cellToRegion;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [];

internalField   uniform 1;

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
    externalWall
    {
        type            zeroGradient;
    }
    solid_to_fluid
    {
        type            extrapolatedCalculated;
        value           uniform 0;
    }
}


